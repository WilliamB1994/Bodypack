{% extends 'admin/base.html.twig' %}
{% block body %}

    <div class="container-fluid">

        <div class="row">
            <div class="col col-12"></div>
        </div>

        <h1 class="section-title">Liste des Produits</h1>

        {% for message in app.flashes('notice') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}


        <table>
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>SKU</th>
                </tr>
            </thead>

            {% for product in products %}

                <tr>
                    <td>{{product.title}}</td>
                    <td>{{product.sku}}</td>
                    <td>
                        <a class="btn btn-admin" href={{path ('product_edit', {'id': product.id} )}}>Modifier</a>
                    </td>

                    <td>{{ include('product/_delete_form.html.twig') }}</td>
                </tr>

            {% endfor %}


        </tbody>
    </table>
</div>{% endblock %}
